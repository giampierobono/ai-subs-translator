{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@ai-subs-translator/types": ["packages/types/src"],
      "@ai-subs-translator/core": ["packages/core/src"],
      "@ai-subs-translator/config": ["packages/config/src"],
      "@ai-subs-translator/provider-openai": ["packages/provider-openai/src"],
      "@ai-subs-translator/provider-opensubtitles": ["packages/provider-opensubtitles/src"]
    }
  },
  "include": [
    "apps/*/src/**/*",
    "packages/*/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/dist/**",
    "**/node_modules/**"
  ]
}
